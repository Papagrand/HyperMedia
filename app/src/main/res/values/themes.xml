<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HyperMedia2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowEnterAnimation">@anim/slide_out_top</item>
        <item name="android:windowExitAnimation">@anim/slide_in_bottom</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/themecolor</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppBottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModelStyle</item>
    </style>
    <style name="AppModelStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
    <style name="BottomSheetDialogThemeVideoMenu" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleVideoMenu</item>
    </style>
    <style name="BottomSheetStyleVideoMenu" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">512dp</item>
    </style>
</resources>