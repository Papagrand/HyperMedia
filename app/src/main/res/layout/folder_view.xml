<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:visibility="gone"
        android:id="@+id/playlist_folder_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:buttonTint="@color/gray"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/folder"/>
    <ImageView
        android:id="@+id/kids_indicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:src="@drawable/child_controll"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/folderName"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotbold"
            android:text="folderName"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/videosCount"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/centurygothic"
            android:text="count_of_videos"
            android:textColor="@color/gray"
            android:textSize="14dp"
            />
    </LinearLayout>

</LinearLayout>