<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background"
    android:padding="16dp"
    android:orientation="vertical">

    <EditText
        android:hint="Введите название плейлиста"
        android:id="@+id/edit_playlistname"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="@font/centurygothic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/selected"/>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_below="@id/edit_playlistname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_music"
            android:text="Музыкальный плейлист"
            android:textColor="@color/white"
            android:fontFamily="@font/centurygothic"
            android:layout_width="wrap_content"
            android:buttonTint="@color/selected"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_video"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/white"
            android:text="Видео-плейлист"
            android:layout_width="wrap_content"
            android:buttonTint="@color/selected"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="Отменить"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@android:color/transparent"
            android:stateListAnimator="@null"
            android:text="Добавить"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>


</LinearLayout>