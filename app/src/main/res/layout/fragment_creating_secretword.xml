<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".OrganizationOfParentControll.CreatingPasswordFragment">

    <ImageButton
        android:id="@+id/back_to_pin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:background="@android:color/transparent"/>
    <TextView
        android:layout_marginTop="90dp"
        android:id="@+id/mainText_creating_secretword"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text="Введите секретное слово для восстановления доступа к полной версии"
        android:maxLines="3"
        android:textSize="30sp"
        android:fontFamily="@font/gotbold"
        android:textColor="@color/white"
        android:padding="15dp"
        android:gravity="center"
        />
    <EditText
        android:hint="Введите слово сюда"
        android:id="@+id/edit_secretword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:maxLines="1"
        android:fontFamily="@font/centurygothic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/selected"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/centurygothic"
        android:stateListAnimator="@null"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/selected" />



</LinearLayout>
