<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Video.VideoFolder"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/videoFolderToolbar"
        android:layout_width="match_parent"
        app:menu="@menu/main_toolbar"
        app:titleTextColor="#FF00C2CB"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/counter_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="18sp"
                android:text="Выбрано: 0"
                android:textColor="@color/themecolor"
                android:fontFamily="@font/centurygothic"/>
        </RelativeLayout>



    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoFolder_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>